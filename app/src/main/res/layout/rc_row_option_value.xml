<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp">

    <RelativeLayout
        android:id="@+id/rl_option_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp">

        <ImageButton
            android:id="@+id/ib_option_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_edit_grey_500_24dp"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/ib_option_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ib_option_edit"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_delete_grey_500_24dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_option_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/ib_option_edit"
            android:layout_toStartOf="@+id/ib_option_edit"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/sub_heading" />

        <TextView
            android:id="@+id/tv_option_sort_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_option_title"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toLeftOf="@+id/ib_option_delete"
            android:layout_toStartOf="@+id/ib_option_delete"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/body" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>