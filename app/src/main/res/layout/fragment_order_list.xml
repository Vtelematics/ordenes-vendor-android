<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_order_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    </androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/ll_filter_order_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent_85"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/filter_title"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sub_heading"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/report_customer"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_order_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/draw_spinner_bg"
                        android:gravity="start|center"
                        android:hint="@string/report_customer"
                        android:inputType="text"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/body" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/report_order_id"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_order_order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/draw_spinner_bg"
                        android:gravity="start|center"
                        android:hint="@string/report_order_id"
                        android:inputType="text"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/body" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/order_Status"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/s_order_status_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/draw_spinner_bg"
                        android:padding="@dimen/_5sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/report_order_amount"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_order_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/draw_spinner_bg"
                        android:gravity="start|center"
                        android:hint="@string/report_order_amount"
                        android:inputType="text"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/body" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/order_date"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_order_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/draw_spinner_bg"
                        android:drawableEnd="@drawable/ic_date_range_grey_500_24dp"
                        android:drawableRight="@drawable/ic_date_range_grey_500_24dp"
                        android:gravity="start|center"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/order_date" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/filter_delivery_date"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_order_delivery_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/draw_spinner_bg"
                        android:drawableEnd="@drawable/ic_date_range_grey_500_24dp"
                        android:drawableRight="@drawable/ic_date_range_grey_500_24dp"
                        android:gravity="start|center"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/filter_delivery_date" />

                    <LinearLayout
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_cancel_order"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="@color/grey_600"
                            android:gravity="center"
                            android:text="@string/btn_cancel"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/btn_apply_order"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:text="@string/apply"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>