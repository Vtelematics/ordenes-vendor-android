<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_gc_list_pl_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_3sdp"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="@dimen/_3sdp"
        android:background="@color/gc_mp_product_image_bg_color"
        android:gravity="center"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/_1sdp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_name"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_80sdp"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/product_price"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_80sdp"/>

            </LinearLayout>

            <com.github.angads25.toggle.LabeledSwitch
                app:on="false"
                app:textOn="@string/enabled"
                app:textOff="@string/disabled"
                app:colorOn="@color/colorPrimaryDark"
                app:colorBorder="@color/color_border"
                android:id="@+id/product_toggle_button"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="end|center"/>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>